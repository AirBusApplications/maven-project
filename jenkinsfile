pipeline {
  agent any
    stages{
        stage ('Build'){
            steps {
                sh 'mvn clean package'
             }        
        post {
            success {
                    echo 'Build Success....'                  
                }    
            }
        }
        stage('Archiving'){
            steps {
                  archiveArtifacts artifacts: '**/target/*.war'
                  echo 'Archiving Completed '
            }
        }
        stage ('Deployment Started'){
            steps {
                  echo 'Deployment starting'
                  build job:'JenkinsFile/Deployment-To-Staging'
                  echo 'Deployment Completed'
            }
        }
    }
}


        
